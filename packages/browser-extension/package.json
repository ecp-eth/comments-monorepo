{
  "name": "@ecp.eth/browser-extension",
  "displayName": "Browser extension",
  "version": "0.0.0",
  "description": "Ethereum Comments browser extension",
  "author": "ecp.eth",
  "scripts": {
    "dev": "plasmo dev",
    "build": "plasmo build",
