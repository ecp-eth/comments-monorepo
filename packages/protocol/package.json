{
  "name": "@ecp.eth/protocol",
  "version": "1.1.2",
  "type": "module",
  "keywords": [
    "ethereum",
    "protocol",
    "comments",
    "smart",
    "contracts",
    "solidity"
  ],
  "author": "ecp.eth",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ecp-eth/ecp.eth"
  },
  "files": [
    "src/**/*.sol",
    "!test/**/*"
  ],
  "scripts": {
    "build": "rivet forge build --sizes --skip test",
    "build:abi": "node ./build-abi.js",
    "test": "rivet forge test -vvv",
    "debug:gas": "rivet forge script script/debug.s.sol:DebugGasUsage",
    "node": "rivet anvil --block-time 2",
    "dev": "node dev.js",
    "deploy:test": "rivet forge script script/deploy.s.sol:DeployScript --sig \"run(string)\" \"test\" --rpc-url http://localhost:8545 --broadcast --force --sender 0xf39Fd6e51aad88F6F4ce6aB8827279cffFb92266",
    "deploy:dev": "rivet forge script script/deploy.s.sol:DeployScript --sig \"run(string)\" \"dev\" --rpc-url http://localhost:8545 --broadcast --force --sender 0xf39Fd6e51aad88F6F4ce6aB8827279cffFb92266",
    "deploy:dev:simulation": "SIM=true rivet forge script script/deploy.s.sol --sig \"run(string)\" \"dev\" --rpc-url http://localhost:8545 --force",
    "deploy:dev:fork": "rivet forge script script/deploy.s.sol:DeployScript --sig \"run(string)\" \"dev\" --rpc-url http://localhost:8545 --broadcast --force --sender $CUSTOM_ANVIL_DEPLOYER_ADDRESS",
    "//": "To deploy on prod, update PROD_RPC_URL in `.env`  to https://<CHAIN>.g.alchemy.com/v2/<APIKEY>",
    "deploy:prod": "dotenv -c .local -- bash -c 'forge script script/deploy.s.sol:DeployScript --ffi --sig \"run(string)\" \"prod\" --rpc-url $PROD_RPC_URL --broadcast --sender ${PROD_DEPLOYER_ADDRESS:-$(cast wallet address $PRIVATE_KEY)}'",
    "deploy:prod:simulation": "SIM=true PROD_DEPLOYER_ADDRESS=0xD1177f978A5535eBa843bDd817E730DF1c42c476 rivet forge script script/deploy.s.sol --sig \"run(string)\" \"prod\" --rpc-url http://localhost:8545 --force",
    "deploy:hook:flatfee:dev": "rivet forge script script/deploy-flatfee-hook.sol:DeployFlatFeeHook --rpc-url http://localhost:8545 --broadcast --force --sender 0xf39Fd6e51aad88F6F4ce6aB8827279cffFb92266"
  },
  "dependencies": {
    "@account-abstraction/contracts": "^0.8.0",
    "@openzeppelin/contracts": "^5.3.0",
    "forge-std": "github:foundry-rs/forge-std#v1.9.6",
    "solady": "^0.1.14"
  },
  "devDependencies": {
    "dotenv-cli": "^8.0.0"
  }
}
