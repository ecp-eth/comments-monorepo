{
  "name": "@ecp.eth/react-editor",
  "description": "React editor for Ethereum Comments Protocol",
  "license": "MIT",
  "author": "Ethereum Comments Protocol",
  "repository": {
    "type": "git",
    "url": "https://github.com/ecp-eth/ecp.git"
  },
  "homepage": "https://ecp.eth",
  "version": "0.0.26",
  "type": "module",
  "main": "./dist/cjs/index.cjs",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "typings": "./dist/esm/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/esm/index.d.ts",
      "import": "./dist/esm/index.js",
      "default": "./dist/cjs/index.cjs"
    },
    "./default-theme": {
      "types": "./dist/esm/default-theme.d.ts",
      "import": "./dist/esm/default-theme.js",
      "default": "./dist/cjs/default-theme.cjs"
    },
    "./editor": {
      "types": "./dist/esm/editor.d.ts",
      "import": "./dist/esm/editor.js",
      "default": "./dist/cjs/editor.cjs"
    },
    "./editor.native": {
      "types": "./dist/esm/editor.native.d.ts",
      "import": "./dist/esm/editor.native.js",
      "default": "./dist/cjs/editor.native.cjs"
    },
    "./editor.css": {
      "types": "./dist/esm/editor.css.d.ts",
      "import": "./dist/esm/editor.css",
      "default": "./dist/cjs/editor.css"
    },
    "./editor.css.js": {
      "types": "./dist/esm/editor.css.js.d.ts",
      "import": "./dist/esm/editor.css.js",
      "default": "./dist/cjs/editor.css.js"
    },
    "./extensions": {
      "types": "./dist/esm/extensions/index.d.ts",
      "import": "./dist/esm/extensions/index.js",
      "default": "./dist/cjs/extensions/index.cjs"
    },
    "./extract-references": {
      "types": "./dist/esm/extract-references.d.ts",
      "import": "./dist/esm/extract-references.js",
      "default": "./dist/cjs/extract-references.cjs"
    },
    "./hooks": {
      "types": "./dist/esm/hooks/index.d.ts",
      "import": "./dist/esm/hooks/index.js",
      "default": "./dist/cjs/hooks/index.cjs"
    },
    "./parser": {
      "types": "./dist/esm/parser.d.ts",
      "import": "./dist/esm/parser.js",
      "default": "./dist/cjs/parser.cjs"
    },
    "./types": {
      "types": "./dist/esm/types.d.ts",
      "import": "./dist/esm/types.js",
      "default": "./dist/cjs/types.cjs"
    }
  },
  "dependencies": {
    "@tiptap/core": "^2.12.0",
    "@tiptap/extension-document": "^2.12.0",
    "@tiptap/extension-hard-break": "^2.12.0",
    "@tiptap/extension-link": "^2.12.0",
    "@tiptap/extension-mention": "^2.12.0",
    "@tiptap/extension-paragraph": "^2.12.0",
    "@tiptap/extension-placeholder": "^2.12.0",
    "@tiptap/extension-text": "^2.12.0",
    "@tiptap/pm": "^2.12.0",
    "@tiptap/react": "^2.12.0",
    "@tiptap/suggestion": "^2.12.0",
    "comlink": "^4.4.2",
    "prosemirror-model": "^1.25.4",
    "prosemirror-state": "^1.4.4",
    "prosemirror-transform": "^1.10.4",
    "tippy.js": "^6.3.7"
  },
  "peerDependencies": {
    "@ecp.eth/sdk": ">=0.0.43",
    "@ecp.eth/shared": ">=0.0.22",
    "@gorhom/portal": ">=1.0.14",
    "@tanstack/react-query": ">=5.0.0",
    "nativewind": ">=4.2.1",
    "pinata": "^2.5.0",
    "react": "18 || 19",
    "react-dom": "18 || 19",
    "react-native": ">=0.81.0",
    "react-native-fast-image": ">=8.6.3",
    "react-native-reanimated": ">=4.1.1",
    "react-native-safe-area-context": ">=5.6.0",
    "react-native-webview": ">=13.16.0",
    "react-native-worklets": ">=0.7.1",
    "viem": "^2.29.2"
  },
  "peerDependenciesMeta": {
    "@gorhom/portal": {
      "optional": true
    },
    "react-dom": {
      "optional": true
    },
    "react-native": {
      "optional": true
    },
    "react-native-fast-image": {
      "optional": true
    },
    "react-native-reanimated": {
      "optional": true
    },
    "react-native-safe-area-context": {
      "optional": true
    },
    "react-native-webview": {
      "optional": true
    },
    "react-native-worklets": {
      "optional": true
    },
    "nativewind": {
      "optional": true
    }
  },
  "devDependencies": {
    "@ecp.eth/build-tools": "workspace:^",
    "@ecp.eth/eslint-config": "workspace:*",
    "@ecp.eth/sdk": "workspace:^",
    "@ecp.eth/shared": "workspace:^",
    "@ecp.eth/typescript-config": "workspace:*",
    "@gorhom/portal": "^1.0.14",
    "@tailwindcss/vite": "^4.1.17",
    "@tanstack/react-query": "^5.75.6",
    "@types/node": "^22.13.1",
    "@types/react": "~19.1.2",
    "@types/react-dom": "~19.1.2",
    "autoprefixer": "^10.4.21",
    "blo-png": "^1.0.3",
    "eslint": "^9.19.0",
    "nativewind": "^4.2.1",
    "pinata": "^2.5.0",
    "postcss": "^8",
    "react": "~19.1.2",
    "react-dom": "~19.1.2",
    "react-native": "0.81.5",
    "react-native-fast-image": "^8.6.3",
    "react-native-reanimated": "^4.1.1",
    "react-native-safe-area-context": "^5.6.2",
    "react-native-webview": "^13.16.0",
    "react-native-worklets": "^0.7.1",
    "tailwindcss": "^3.4.1",
    "viem": "^2.29.2",
    "vite": "6.4.1",
    "vite-plugin-singlefile": "^2.3.0"
  },
  "scripts": {
    "check-types": "tsc --noEmit",
    "dev": "tsup --format esm --out-dir dist/esm --watch",
    "build:cjs": "tsup --format cjs --out-dir dist/cjs",
    "build:esm": "tsup --format esm --out-dir dist/esm",
    "build:all": "rm -rf dist && pnpm run build:webview-container && pnpm run build:cjs && pnpm run build:esm && proxy-package generate ./package.json && proxy-package hide ./package.json",
    "build:dev": "export NODE_ENV=development && pnpm run build:all",
    "build:webview-container": "rm -rf src/webview-container/generated && vite build --config webview-container.vite.config.js",
    "build": "export NODE_ENV=production && pnpm run build:all",
    "lint": "eslint \"./src/**/*.ts\"",
    "test": "vitest run",
    "test:watch": "vitest"
  }
}
