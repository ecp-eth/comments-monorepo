{
  "name": "@ecp.eth/sdk",
  "version": "0.0.13",
  "type": "module",
  "license": "MIT",
  "main": "./dist/cjs/index.cjs",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "typings": "./dist/esm/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/esm/index.d.ts",
      "import": "./dist/esm/index.js",
      "default": "./dist/cjs/index.cjs"
    },
    "./abis": {
      "types": "./dist/esm/abis.d.ts",
      "import": "./dist/esm/abis.js",
      "default": "./dist/cjs/abis.cjs"
    },
    "./react": {
      "types": "./dist/esm/react.d.ts",
      "import": "./dist/esm/react.js",
      "default": "./dist/cjs/react.cjs"
    },
    "./schemas": {
      "types": "./dist/esm/schemas/index.d.ts",
      "import": "./dist/esm/schemas/index.js",
      "default": "./dist/cjs/schemas/index.cjs"
    },
    "./types": {
      "types": "./dist/esm/types.d.ts",
      "import": "./dist/esm/types.js",
      "default": "./dist/cjs/types.cjs"
    },
    "./channel-manager": {
      "types": "./dist/esm/channel-manager/index.d.ts",
      "import": "./dist/esm/channel-manager/index.js",
      "default": "./dist/cjs/channel-manager/index.cjs"
    },
    "./channel-manager/react": {
      "types": "./dist/esm/channel-manager/react/index.d.ts",
      "import": "./dist/esm/channel-manager/react/index.js",
      "default": "./dist/cjs/channel-manager/react/index.cjs"
    },
    "./comments": {
      "types": "./dist/esm/comments/index.d.ts",
      "import": "./dist/esm/comments/index.js",
      "default": "./dist/cjs/comments/index.cjs"
    }
  },
  "scripts": {
    "check-types": "tsc --noEmit",
    "dev": "tsup --format esm --out-dir dist/esm --watch",
    "build:cjs": "tsup --format cjs --out-dir dist/cjs",
    "build:esm": "tsup --format esm --out-dir dist/esm",
    "build": "rm -rf dist && npm run build:cjs && npm run build:esm && proxy-package generate ./package.json && proxy-package hide ./package.json",
    "test": "pnpm run test:types && pnpm run test:unit",
    "test:types": "tsd",
    "test:unit": "node --experimental-strip-types --no-warnings ./scripts/run-tests.ts",
    "test:unit:watch": "pnpm run test:unit --watch",
    "lint": "eslint \"./src/**/*.ts\""
  },
  "devDependencies": {
    "@ecp.eth/build-tools": "workspace:*",
    "@ecp.eth/eslint-config": "workspace:*",
    "@ecp.eth/typescript-config": "workspace:*",
    "@tanstack/react-query": "^5.69.0",
    "@types/node": "^22.14.1",
    "@types/react": "^19.0.8",
    "eslint": "^9.19.0",
    "node-resolve-ts": "^1.0.2",
    "react": "^19.0.0",
    "tsd": "^0.32.0",
    "viem": "^2.26.0",
    "wagmi": "^2.14.16",
    "zod": "^3.24.1"
  },
  "dependencies": {
    "effect": "^3.12.9",
    "lz-ts": "^1.1.2"
  },
  "peerDependencies": {
    "@tanstack/react-query": ">=5.0.0",
    "react": "18 || 19",
    "viem": "^2.26.0",
    "wagmi": "^2.14.16",
    "zod": "^3.24.1"
  },
  "tsd": {
    "directory": "src"
  }
}
