{
  "name": "@ecp.eth/broadcast-app-indexer",
  "version": "0.0.13",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=22 <23"
  },
  "scripts": {
    "drizzle-kit": "dotenvx run --convention nextjs -- drizzle-kit",
    "db:migrate:generate": "pnpm drizzle-kit generate",
    "db:migrate:up": "pnpm drizzle-kit migrate",
    "predev": "pnpm db:migrate:up",
    "dev": "ponder dev --port 42070",
    "prestart": "NODE_ENV=production pnpm db:migrate:up",
    "start": "NODE_ENV=production ponder start",
    "db": "ponder db",
    "codegen": "ponder codegen",
    "serve": "ponder serve",
    "lint": "eslint \"./src/**/*.ts\"",
    "check-types": "tsc --noEmit",
    "test": "vitest run --passWithNoTests",
    "test:watch": "vitest",
    "sync:broadcast-hook:abi": "node ../../packages/protocol/build-broadcast-hook-abi.js > src/abi/generated/broadcast-hook-abi.ts"
  },
  "dependencies": {
    "@dotenvx/dotenvx": "^1.47.6",
    "@ecp.eth/sdk": "workspace:*",
    "@ecp.eth/shared": "workspace:*",
    "@hono/node-server": "^1.13.8",
    "@hono/otel": "^1.0.1",
    "@hono/zod-openapi": "^0.18.4",
    "@neynar/nodejs-sdk": "^2.44.0",
    "@opentelemetry/api": "1.9.0",
    "@opentelemetry/auto-instrumentations-node": "0.67.1",
    "@opentelemetry/exporter-trace-otlp-http": "0.208.0",
    "@opentelemetry/otlp-exporter-base": "0.208.0",
    "@opentelemetry/resources": "2.2.0",
    "@opentelemetry/sdk-node": "0.208.0",
    "@opentelemetry/sdk-trace-base": "2.2.0",
    "@opentelemetry/semantic-conventions": "1.38.0",
    "@ponder/client": "0.12.21",
    "@sentry/node": "9.47.1",
    "@sentry/opentelemetry": "9.47.1",
    "@sentry/profiling-node": "9.47.1",
    "caip": "^1.1.1",
    "dataloader": "^2.2.3",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "0.41.0",
    "hono": "^4.9.1",
    "lru-cache": "^11.0.2",
    "pg": "8.16.0",
    "ponder": "0.12.21",
    "viem": "^2.29.2",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@ecp.eth/eslint-config": "workspace:*",
    "@types/node": "^22.13.1",
    "@types/pg": "^8.11.11",
    "eslint": "^9.19.0",
    "globals": "^15.14.0",
    "nock": "^14.0.5",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "3.2.4"
  }
}
