{
  "name": "@ecp.eth/docs",
  "version": "0.0.9",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "env-cmd -f .env.local vocs dev -p 3004",
    "build": "pnpm run ref:gen:all && vocs build",
    "preview": "vocs preview",
    "check-types": "tsc --noEmit",
    "ref:gen:demo:blog": "cp ../apps/embed-demo-blog/README.md pages/demos/blog/index.mdx",
    "ref:gen:demo:demo": "cp ../apps/demo/README.md pages/demos/custom-integration/index.mdx",
    "ref:gen:demo": "pnpm run ref:gen:demo:blog && pnpm run ref:gen:demo:demo",
    "ref:gen:sdk": "typedoc --tsconfig ../packages/sdk/tsconfig.json --out pages/sdk-reference/ --entryPoints ../packages/sdk/src/index.ts ../packages/sdk/src/types.ts ../packages/sdk/src/react.tsx ../packages/sdk/src/schemas/index.ts --publicPath /sdk-reference/",
    "ref:gen:protocol": "solidity-docgen -o pages/protocol-reference -i ../packages/protocol/src/ --solc-module solc -t templates/solidity-codegen",
    "ref:gen:indexer:index": "cp ../apps/indexer/README.md pages/indexer-reference/index.mdx",
    "ref:gen:indexer": "npm run ref:gen:indexer:index && NEYNAR_API_KEY=123 SKIP_DRIZZLE_SCHEMA_DETECTION=1 WEBHOOK_SECRET=secret DATABASE_URL=postgresql://postgres:postgres@localhost:5432/postgres tsx --import ./scripts/ponder-module-register.mjs scripts/generate-indexer-openapi-spec.ts",
    "ref:gen:all": "pnpm run ref:gen:protocol && pnpm run ref:gen:sdk && pnpm run ref:gen:indexer && pnpm run ref:gen:demo"
  },
  "dependencies": {
    "@ecp.eth/sdk": "workspace:*",
    "@theguild/remark-mermaid": "^0.2.0",
    "acorn": "^8.14.0",
    "decimal.js": "^10.5.0",
    "hono": "^4.6.20",
    "lucide-react": "^0.474.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "swagger-ui-react": "^5.20.5",
    "typedoc-plugin-markdown": "^4.6.1",
    "typedoc-plugin-zod": "^1.4.0",
    "use-debounce": "^10.0.4",
    "vocs": "^1.0.11",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@ecp.eth/indexer": "workspace:*",
    "@hono/zod-openapi": "^0.18.4",
    "@types/react": "^19.0.11",
    "@types/react-dom": "^19.0.4",
    "@types/swagger-ui-react": "^5.18.0",
    "env-cmd": "^10.1.0",
    "escape-string-regexp": "^5.0.0",
    "js-yaml": "^4.1.0",
    "solc": "^0.8.13",
    "solidity-docgen": "~0.5.17",
    "tailwindcss": "^4.0.13",
    "tsx": "^4.19.3",
    "typedoc": "^0.28.1",
    "unist-util-visit": "^5.0.0",
    "vite": "^6.2.1"
  }
}
