{
  "name": "@ecp.eth/monorepo",
  "private": true,
  "scripts": {
    "check-types": "turbo run check-types",
    "build": "turbo build --filter=!./apps/demo --filter=!./apps/embed --filter=!./apps/embed-demo-blog --filter=!./docs",
    "build:indexer": "turbo build --filter=./apps/indexer... --filter=./packages/protocol",
    "dev": "turbo dev --filter=./apps/demo... --filter=./apps/indexer --filter=./packages/protocol --filter=./packages/test-protocol",
    "dev:indexer": "turbo dev --filter=./apps/indexer... --filter=./packages/protocol",
    "dev:embed": "turbo dev --filter=./apps/embed... --filter=./apps/embed-demo-blog --filter=./apps/indexer --filter=./packages/protocol",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "pkg:publish": "scripts/publish.sh",
    "postinstall": "node scripts/fix-sentry-opentelemetry.js",
    "test": "turbo test --filter=!./packages/protocol"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.12",
    "prettier": "^3.4.2",
    "tsup": "^8.3.6",
    "turbo": "^2.5.0",
    "typescript": "^5.8.3"
  },
  "packageManager": "pnpm@10.8.1",
  "engines": {
    "node": ">=22"
  },
  "pnpm": {
    "overrides": {
      "@hono/zod-openapi>@asteasolutions/zod-to-openapi": "^7.3.0",
      "@react-native-async-storage/async-storage": "^2.1.2",
      "@reown/appkit": "^1.7.4",
      "@walletconnect/core": "^2.20.2",
      "@walletconnect/ethereum-provider": "^2.20.2",
      "@walletconnect/sign-client": "^2.20.2",
      "@walletconnect/universal-provider": "^2.20.2",
      "@walletconnect/types": "^2.20.2",
      "@walletconnect/utils": "^2.20.2",
      "valtio": "2.1.4",
      "use-sync-external-store": "^1.5.0"
    }
  }
}
