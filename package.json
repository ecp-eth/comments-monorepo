{
  "name": "@ecp.eth/monorepo",
  "private": true,
  "scripts": {
    "check-types": "turbo run check-types",
    "build": "NODE_OPTIONS='--max-old-space-size=8192' turbo build --filter=!./apps/demo --filter=!./apps/embed --filter=!./examples/embed-demo-blog --filter=!./docs --filter=!./packages/protocol --filter=!./examples/snippets --filter=!./apps/nft-base-uri-server --filter=!./examples/signer --filter=!./apps/broadcast-app --filter=!./apps/indexer-app",
    "build:dev": "turbo build --filter=!./apps/demo --filter=!./apps/embed --filter=!./examples/embed-demo-blog --filter=!./docs",
    "build:indexer": "turbo build --filter=./apps/indexer...",
    "build:broadcast-mini-app-indexer": "turbo build --filter=./apps/broadcast-app-indexer...",
    "dev": "turbo dev --filter=./apps/demo... --filter=./examples/signer... --filter=./apps/indexer... --filter=./packages/protocol --filter=./packages/test-protocol",
    "dev:broadcast-mini-app": "CUSTOM_ANVIL_DEPLOYER_ADDRESS=0x0ED33c145DbdB3C65e5b501b4Bca5fb360EFC9A8 CUSTOM_ANVIL_DEPLOYER_PRIVATE_KEY=0xdd2671f9e3eee2d748a047e9b75db44a4b6649c3249520635f86bd955e093ef9 turbo dev --filter=./apps/broadcast-app --filter=./apps/broadcast-app-indexer --filter=./apps/indexer --filter=./packages/protocol",
    "dev:broadcast-mini-app:whitelist-account": "CUSTOM_ANVIL_DEPLOYER_ADDRESS=0x0ED33c145DbdB3C65e5b501b4Bca5fb360EFC9A8 CUSTOM_ANVIL_DEPLOYER_PRIVATE_KEY=0xdd2671f9e3eee2d748a047e9b75db44a4b6649c3249520635f86bd955e093ef9 node --experimental-strip-types apps/broadcast-app-indexer/scripts/whitelist-account.ts",
    "dev:indexer-app": "turbo dev --filter=./apps/indexer-app --filter=./apps/indexer --filter=./packages/protocol --filter=./examples/signer",
    "dev:indexer": "turbo dev --filter=./apps/indexer --filter=./packages/protocol",
    "dev:nft-base-uri-server": "turbo dev --filter=./apps/nft-base-uri-server... --filter=./packages/protocol",
    "dev:embed": "turbo dev --filter=./apps/embed... --filter=./examples/embed-demo-blog --filter=./apps/indexer --filter=./packages/protocol",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{js,ts,tsx,sol}\"",
    "pkg:publish": "scripts/publish.sh",
    "postinstall": "node scripts/fix-sentry-opentelemetry.js",
    "test": "turbo test --filter=!./packages/protocol",
    "prepare": "husky"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.4",
    "@ecp.eth/build-tools": "workspace:^",
    "eslint": "^9.19.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.0.0",
    "prettier": "^3.4.2",
    "prettier-plugin-solidity": "^2.0.0",
    "tsup": "^8.3.6",
    "turbo": "^2.6.3",
    "typescript": "^5.8.3",
    "vitest": "3.2.4"
  },
  "packageManager": "pnpm@10.11.1",
  "engines": {
    "node": ">=22.22 <23"
  },
  "pnpm": {
    "overrides": {
      "@hono/zod-openapi>@asteasolutions/zod-to-openapi": "7.3.4",
      "@hpke/core": "^1.7.5",
      "@react-native-async-storage/async-storage": "^2.1.2",
      "@opentelemetry/api-logs": "0.209.0",
      "@opentelemetry/context-async-hooks": "2.3.0",
      "@opentelemetry/core": "2.3.0",
      "@opentelemetry/instrumentation": "0.209.0",
      "@opentelemetry/sdk-node": "0.209.0",
      "@walletconnect/core": "~2.21.1",
      "@walletconnect/sign-client": "~2.21.1",
      "@walletconnect/universal-provider": "~2.21.1",
      "axios": "^1.13.2",
      "linkifyjs": "^4.3.2",
      "playwright": "^1.57.0",
      "porto>zod": "4.3.5",
      "viem": "~2.44.2",
      "use-sync-external-store": "^1.5.0",
      "vite": "6.3.5",
      "zod": "^3.25.76"
    },
    "patchedDependencies": {
      "ponder": "patches/ponder.patch",
      "@privy-io/server-auth@1.32.5": "patches/@privy-io__server-auth@1.32.5.patch",
      "@asteasolutions/zod-to-openapi@7.3.4": "patches/@asteasolutions__zod-to-openapi@7.3.4.patch",
      "@wagmi/connectors@6.2.0": "patches/@wagmi__connectors@6.2.0.patch",
      "@rainbow-me/rainbowkit@2.2.10": "patches/@rainbow-me__rainbowkit@2.2.10.patch",
      "@walletconnect/keyvaluestorage@1.1.1": "patches/@walletconnect__keyvaluestorage@1.1.1.patch",
      "@hono/otel@1.1.0": "patches/@hono__otel@1.1.0.patch",
      "@opentelemetry/exporter-logs-otlp-http@0.209.0": "patches/@opentelemetry__exporter-logs-otlp-http@0.209.0.patch",
      "@opentelemetry/exporter-logs-otlp-proto@0.209.0": "patches/@opentelemetry__exporter-logs-otlp-proto@0.209.0.patch",
      "@opentelemetry/exporter-metrics-otlp-http@0.209.0": "patches/@opentelemetry__exporter-metrics-otlp-http@0.209.0.patch",
      "@opentelemetry/exporter-metrics-otlp-proto@0.209.0": "patches/@opentelemetry__exporter-metrics-otlp-proto@0.209.0.patch",
      "@opentelemetry/exporter-trace-otlp-http@0.209.0": "patches/@opentelemetry__exporter-trace-otlp-http@0.209.0.patch",
      "@opentelemetry/exporter-trace-otlp-proto@0.209.0": "patches/@opentelemetry__exporter-trace-otlp-proto@0.209.0.patch",
      "@opentelemetry/otlp-grpc-exporter-base@0.209.0": "patches/@opentelemetry__otlp-grpc-exporter-base@0.209.0.patch"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx,sol}": "prettier --write"
  },
  "license": "MIT"
}
