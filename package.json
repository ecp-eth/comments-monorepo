{
  "name": "@ecp.eth/monorepo",
  "private": true,
  "scripts": {
    "check-types": "turbo run check-types",
    "build": "turbo build --filter=!./apps/demo --filter=!./apps/embed --filter=!./apps/embed-demo-blog",
    "dev": "turbo dev --filter=./apps/demo... --filter=./apps/indexer --filter=./packages/protocol --filter=./packages/test-protocol",
    "dev:embed": "turbo dev --filter=./apps/embed... --filter=./apps/embed-demo-blog --filter=./apps/indexer --filter=./packages/protocol",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "prepare-publish-sdk": "scripts/prepare-publish-sdk.sh"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.12",
    "prettier": "^3.4.2",
    "tsup": "^8.3.6",
    "turbo": "^2.4.0",
    "typescript": "5.7.3"
  },
  "packageManager": "yarn@4.7.0+sha512.5a0afa1d4c1d844b3447ee3319633797bcd6385d9a44be07993ae52ff4facabccafb4af5dcd1c2f9a94ac113e5e9ff56f6130431905884414229e284e37bb7c9",
  "engines": {
    "node": ">=22"
  },
  "resolutions": {
    "@hono/zod-openapi": "npm:@asteasolutions/zod-to-openapi@^7.3.0"
  },
  "workspaces": [
    "apps/*",
    "packages/*",
    "docs",
    "!docs/templates/*"
  ]
}
